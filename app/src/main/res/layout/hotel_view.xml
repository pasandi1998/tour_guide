<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#ECF1EB"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/single_hotel_img_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:shadowColor="#ECF1EB"
        android:src="@drawable/plant1"
        android:tint="@color/black_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/text_hotel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hotel Name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/single_hotel_img_view"
        app:layout_constraintEnd_toEndOf="@+id/single_hotel_img_view"
        app:layout_constraintStart_toStartOf="@+id/single_hotel_img_view"
        app:layout_constraintTop_toTopOf="@+id/single_hotel_img_view" />

    <TextView
        android:id="@+id/text_province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Province"
        android:textColor="#cccccc"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/single_hotel_img_view"
        app:layout_constraintStart_toStartOf="@+id/single_hotel_img_view"
        app:layout_constraintTop_toBottomOf="@+id/text_hotel_name">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>